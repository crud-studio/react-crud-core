{
  "name": "@crud-studio/react-crud-core",
  "version": "4.0.0",
  "description": "CRUD Studio core functionality for react apps.",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "start": "rollup -c -w",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.+(js|jsx|ts|tsx|json|yml|yaml|css|md|vue)\"",
    "watch": "npm-watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crud-studio/react-crud-core.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/crud-studio/react-crud-core/issues"
  },
  "homepage": "https://github.com/crud-studio/react-crud-core#readme",
  "dependencies": {
    "crypto-js": "^3.3.0",
    "elliptic": "^6.5.4",
    "fingerprintjs2": "^2.1.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@types/axios": "^0.14.0",
    "@types/crypto-js": "^4.0.2",
    "@types/elliptic": "^6.4.13",
    "@types/fingerprintjs2": "^2.0.0",
    "@types/lodash": "^4.14.170",
    "@types/lru-cache": "^5.1.0",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.7",
    "@types/uuid": "^8.3.0",
    "babel-core": "^6.26.3",
    "babel-runtime": "^6.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "6.0",
    "lint-staged": "^11.0.0",
    "npm-watch": "^0.10.0",
    "prettier": "^2.3.1",
    "rollup": "^2.51.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "typescript": "^4.3.2"
  },
  "peerDependencies": {
    "axios": "^0.21.1",
    "axios-hooks": "^2.6.3",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.0.0-beta.0",
    "react-use": "^17.2.4",
    "secure-ls": "^1.2.6",
    "type-fest": "^1.2.0",
    "uuid": "^8.3.2"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,tsx"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "react-hooks/exhaustive-deps": "off"
    }
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 120,
    "bracketSpacing": false,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix",
      "git add"
    ],
    "*.+(json|css|md)": [
      "prettier --write",
      "git add"
    ]
  }
}
